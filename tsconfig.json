{
  "compilerOptions": {
    "types": ["reflect-metadata", "inversify"],
  "module": "commonjs",
  "target": "ESNEXT",
  "strict": false,
  "noImplicitAny": false,
  "sourceMap": false,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "outDir": "dist",
  "baseUrl": "./",
  "paths": {
    "@app/*": ["./app/*"],
    "@api/*": ["./app/api/*"],
    "@components/*": ["./app/components/*"],

    "@pubsub/*": ["./modules/pubsub/*"],
    "@scaledrone/*": ["./modules/pubsub/scaledrone-service.git/*"],
    "@zapdrone/*": ["./modules/pubsub/zapdrone-service.git/*"],

    "@core/*": ["./app/core/*"],
    "@cli/*": ["./app/cli/*"],
    "@lib/*": ["./lib/*"],
    "@db/*": ["./database/*"],

    "@zapModels/*": ["./app/zap-ts-models/*"],
    "@models/*": ["./app/models/*"],
    "@putteDb/*": ["./lib/dbcore/*"],
    "@utils/*": ["./lib/utils/*"],
    "@putte/*": ["./lib/node-tsutils/*"],
    "@zaplib/*": ["./lib/topzap-utils-lib/*"]
  }
},
  "exclude": [
    "test",
    "node_modules"
  ]
}
